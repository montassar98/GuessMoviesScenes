<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout_main"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:alpha="0.8"
                android:minLines="2" android:maxLines="2" android:minEms="20" android:maxEms="20" android:ems="20"

                android:layout_margin="5dp"
                android:id="@+id/txt_answer_1"
                android:textColor="@android:color/white"
                android:background="@drawable/cadre"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Avatar"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:alpha="0.8"
                android:minLines="2" android:maxLines="2" android:minEms="20" android:maxEms="20" android:ems="20"

                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:id="@+id/txt_answer_2"
                android:textColor="@android:color/white"
                android:background="@drawable/cadre"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Avatar"/>

            <Button
                android:id="@+id/txt_answer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:minLines="2" android:maxLines="2" android:minEms="20" android:maxEms="20" android:ems="20"

                android:background="@drawable/cadre"
                android:gravity="center"
                android:padding="10dp"
                android:text="Avatar"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/txt_answer_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/cadre"
                android:gravity="center"
                android:padding="10dp"
                android:minLines="2" android:maxLines="2" android:minEms="20" android:maxEms="20" android:ems="20"
                android:text="Avatar"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/txt_answer_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/cadre"
                android:gravity="center"
                android:padding="10dp"
                android:text="Avatar"
                android:minLines="2" android:maxLines="2" android:minEms="20" android:maxEms="20" android:ems="20"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/txt_answer_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:alpha="0.8"
                android:layout_weight="1"
                android:background="@drawable/cadre"
                android:gravity="center"
                android:padding="10dp"
                android:text="Avatar"
                android:minLines="2" android:maxLines="2" android:minEms="20" android:maxEms="20" android:ems="20"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>